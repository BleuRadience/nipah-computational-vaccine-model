name: Test Model

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.8, 3.9, '3.10', '3.11']

    steps:
    - uses: actions/checkout@v3
    
    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
    
    - name: Test model execution
      run: |
        python nipah_vaccine_model.py --quick --no-plots --output test_results
    
    - name: Verify outputs
      run: |
        test -f test_results/comprehensive_report.txt
        test -f test_results/vaccine_construct.fasta
        test -f test_results/cloning_sequence.txt
    
    - name: Clean up
      run: |
        rm -rf test_results
